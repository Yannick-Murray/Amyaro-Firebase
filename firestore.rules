rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Listen - nur Owner kann lesen, schreiben, löschen
    match /lists/{listId} {
      allow read, write, delete: if request.auth != null 
        && (request.auth.uid == resource.data.userId 
        || request.auth.uid in resource.data.sharedWith);
    }
    
    // Categories - nur für Owner der Parent-Liste
    match /categories/{categoryId} {
      allow read, write, delete: if request.auth != null 
        && exists(/databases/$(database)/documents/lists/$(resource.data.listId))
        && (request.auth.uid == get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.userId
        || request.auth.uid in get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.sharedWith);
    }
    
    // Items - nur für Owner der Parent-Liste  
    match /items/{itemId} {
      allow read, write, delete: if request.auth != null 
        && exists(/databases/$(database)/documents/lists/$(resource.data.listId))
        && (request.auth.uid == get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.userId
        || request.auth.uid in get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.sharedWith);
    }
    
    // Users Collection (für Profile, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}